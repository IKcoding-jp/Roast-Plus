<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- デフォルト設定：HTTPS通信のみ許可 -->
    <domain-config cleartextTrafficPermitted="false">
        <domain includeSubdomains="true">firebase.googleapis.com</domain>
        <domain includeSubdomains="true">firestore.googleapis.com</domain>
        <domain includeSubdomains="true">identitytoolkit.googleapis.com</domain>
        <domain includeSubdomains="true">securetoken.googleapis.com</domain>
        <domain includeSubdomains="true">www.googleapis.com</domain>
        <domain includeSubdomains="true">accounts.google.com</domain>
        <domain includeSubdomains="true">oauth2.googleapis.com</domain>
    </domain-config>
    
    <!-- 開発環境でのみHTTP通信を許可（デバッグ用） -->
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">10.0.2.2</domain>
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">127.0.0.1</domain>
    </domain-config>
    
    <!-- SSL/TLS設定の改善 -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- システム証明書を信頼 -->
            <certificates src="system"/>
            <!-- ユーザー証明書も信頼（開発用） -->
            <certificates src="user"/>
        </trust-anchors>
    </base-config>
    
    <!-- Google API用の特別設定 -->
    <domain-config>
        <domain includeSubdomains="true">googleapis.com</domain>
        <trust-anchors>
            <certificates src="system"/>
        </trust-anchors>
        <!-- 証明書ピニングは一時的に無効化 -->
        <!-- <pin-set expiration="2025-12-31">
            <pin digest="SHA-256">AAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA=</pin>
            <pin digest="SHA-256">BBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBBB=</pin>
        </pin-set> -->
    </domain-config>
</network-security-config>
