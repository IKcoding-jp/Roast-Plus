rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // ユーザーデータへのアクセス
    match /users/{userId} {
      // 認証済みユーザーが自分のデータにのみアクセス可能
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // 欠点豆マスターデータ（全ユーザー共通）
    match /defectBeans/{defectBeanId} {
      // 全ユーザーが読み取り可能
      allow read: if request.auth != null;
      // 認証済みユーザーが編集可能
      allow write: if request.auth != null;
    }

    // 担当表機能（ルート直下は無効化）
    match /teams/{teamId} {
      allow read, write: if false;
    }
    match /members/{memberId} {
      allow read, write: if false;
    }
    match /managers/{managerId} {
      allow read, write: if false;
    }
    match /taskLabels/{taskLabelId} {
      allow read, write: if false;
    }
    match /assignmentDays/{date} {
      allow read, write: if false;
    }
    match /shuffleEvents/{date} {
      allow read, write: if false;
    }
    match /shuffleHistory/{historyId} {
      allow read, write: if false;
    }
    match /assignmentSettings/{document=**} {
      allow read, write: if false;
    }

    // 担当表機能（ユーザー配下）
    match /users/{userId}/teams/{teamId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /users/{userId}/members/{memberId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /users/{userId}/managers/{managerId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /users/{userId}/taskLabels/{taskLabelId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /users/{userId}/assignmentDays/{date} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /users/{userId}/shuffleEvents/{date} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /users/{userId}/shuffleHistory/{historyId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /users/{userId}/assignmentSettings/{document=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // メタ情報（サーバー時刻取得など）
    match /_meta/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
